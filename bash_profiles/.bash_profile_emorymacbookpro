
eval "$(/opt/homebrew/bin/brew shellenv)"

# kitty
source /dev/stdin <<<"$(kitty + complete setup bash)"

################################
#####Mac-specific functions#####
################################
clip() {
    if [ -f "$1" ]; then
        cat "$1" | pbcopy
    else
        echo "File does not exist: $1"
    fi
}
# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi
